{{> header}}
<div class="row">
        <!-- logo: board name, or replace 'Board Logo' with an image -->
        <div class="span4">
          <h1><a href="/">xBB Logo here!</a></h1>
        </div>

		{{> user}}
	
	    <!-- most recent 5 posts in this board; may need to truncate long titles. alt text is most recent post date -->
    <div class="subnav visible-desktop">
      <div class="container">
        <div class="row">
        </div>
      </div>
    </div>
  </header>

  <!-- board -->
  <div role="main">
    <div class="container">
      <div class="row">
        <div class="span12">
          <h1>xBB</h1>
			{{#Boards}}
				{{#Items}}
				  <article id="{{Id}}">
					<div class="row">
						<div class="hidden-phone">
							<div class="span1">
								<div class="btn-group">
									<button class="btn btn-mini dropdown-toggle" data-toggle="dropdown">Actions <span class="caret"></span></button>
										<ul class="dropdown-menu">
											<li><a href="../Boards/{{Id}}"><span class="icon-comment"></span> View Topic</a></li>
										</ul>
								</div>
							</div>
						</div>

						<div class="span11">
							<h1><a href="../Boards/{{Id}}">{{Name}}</a></h1>
							<p>
							{{Description}}
							</p>
						</div>
					</div>
				</article>
		{{/Items}}
		{{^Items}}
			No Boards Found
		{{/Items}}
		{{/Boards}}
        </div>
      </div>
    </div>
{{> footer}}
